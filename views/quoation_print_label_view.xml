<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="quoation_print_label_view_form" model="ir.ui.view">
		<field name="name">quoation.print_label.form</field>
		<field name="model">quoation.print_label</field>
		<field name="arch" type="xml">
			<form string="Label Printing">

				<header>
					<button name="%(print_labels.print_quoation_print_label)d" string="Imprimir" type="action"  class="btn-primary"/>
				</header>
				
				<group col='4'>
					<field name="name"/>
					<field name="partner_id"/>
				</group>


				<notebook>
					<page name="print_label_line_ids" string="Order Lines">
						<group>
							<field name="print_label_line_ids" nolabel="1"/>
						</group>
					</page>



				
				</notebook>


				<group class="oe_subtotal_footer oe_right" colspan="2" name="total">

					<div class="oe_subtotal_footer_separator oe_inline o_td_label">
						<label for="total"/>
					</div>
					<field name="total" nolabel="1" class="oe_subtotal_footer_separator" widget="monetary" />
				</group>


			</form>
		</field>
	</record>
		
	<record id="quoation_print_label_view_tree" model="ir.ui.view">
		<field name="name">quoation.print_label.tree</field>
		<field name="model">quoation.print_label</field>
		<field name="arch" type="xml">
			<tree string="Label Printing">
				<field name="name"/>
				<field name="partner_id"/>
				<field name="total"/>
			</tree>
		</field>
	</record>


	<record id="quoation_print_label_form_action" model="ir.actions.act_window">
		<field name="name">Label Printing</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">quoation.print_label</field>
		<field name="view_type">form</field>
		<field name="view_mode">tree,form</field>
		<field name="help" type="html">
		  <p class="o_view_nocontent_smiling_face">
			Create a new Label Printing
		  </p>
		</field>
	</record>

</odoo>